#!/usr/bin/env python3
"""Monitor the Overdrive collections using Overdrive's search feature"""

import os
import sys

bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..")
sys.path.append(os.path.abspath(package_dir))

from core.scripts import RunCollectionMonitorScript         # noqa: E402
from api.overdrive import OverdriveCirculationMonitor       # noqa: E402

RunCollectionMonitorScript(OverdriveCirculationMonitor).run()
