#!/usr/bin/env python3
"""Make sure all Overdrive books have bibliographic coverage."""

import os
import sys

bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..", "..")
sys.path.append(os.path.abspath(package_dir))

from core.scripts import RunCoverageProviderScript                  # noqa: E402
from core.overdrive import OverdriveBibliographicCoverageProvider   # noqa: E402

RunCoverageProviderScript(OverdriveBibliographicCoverageProvider).run()
