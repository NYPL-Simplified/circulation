#!/usr/bin/env python3
"""Sweep through our Bibliotheca collections verifying circulation stats."""

import os
import sys
from newrelic import agent


def bibliotheca_circulation_sweep():
    bin_dir = os.path.split(__file__)[0]
    package_dir = os.path.join(bin_dir, "..")
    sys.path.append(os.path.abspath(package_dir))

    from core.scripts import RunCollectionMonitorScript         # noqa: E402
    from api.bibliotheca import BibliothecaCirculationSweep     # noqa: E402

    RunCollectionMonitorScript(BibliothecaCirculationSweep).run()


if __name__ == '__main__':
    nrApp = agent.register_application()

    with agent.BackgroundTask(nrApp, name='bibliotheca_circulation_sweep', group='Scripts'):
        bibliotheca_circulation_sweep()
