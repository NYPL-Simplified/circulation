#!/usr/bin/env python3
"""Make sure an RBDigital collection is up to date."""

import os
import sys

bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..")
sys.path.append(os.path.abspath(package_dir))

from core.scripts import RunCollectionMonitorScript     # noqa: E402
from api.rbdigital import RBDigitalDeltaMonitor         # noqa: E402

RunCollectionMonitorScript(RBDigitalDeltaMonitor).run()
