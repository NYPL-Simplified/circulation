#!/usr/bin/env python3
"""Monitor the Axis collection by looking for books that have been removed."""

import os
import sys
from newrelic import agent

def axis_reaper():
    bin_dir = os.path.split(__file__)[0]
    package_dir = os.path.join(bin_dir, "..")
    sys.path.append(os.path.abspath(package_dir))

    from core.scripts import RunCollectionMonitorScript     # noqa: E402
    from api.axis import AxisCollectionReaper               # noqa: E402

    RunCollectionMonitorScript(AxisCollectionReaper).run()


if __name__ == '__main__':
    nrApp = agent.register_application()

    with agent.BackgroundTask(nrApp, name='axis_reaper', group='Scripts'):
        axis_reaper()