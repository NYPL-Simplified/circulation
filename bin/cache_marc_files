#!/usr/bin/env python3
"""Refresh and store the MARC files for lanes."""

import os
import sys
from newrelic import agent


def cache_marc_files():
    bin_dir = os.path.split(__file__)[0]
    package_dir = os.path.join(bin_dir, "..")
    sys.path.append(os.path.abspath(package_dir))

    from scripts import CacheMARCFiles           # noqa: E402

    CacheMARCFiles().run()


if __name__ == '__main__':
    nrApp = agent.register_application()

    with agent.BackgroundTask(nrApp, name='cache_marc_files', group='Scripts'):
        cache_marc_files()
