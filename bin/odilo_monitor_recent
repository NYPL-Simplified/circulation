#!/usr/bin/env python
"""Updates an Odilo collection."""
import os
import sys

bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..")
sys.path.append(os.path.abspath(package_dir))

from core.scripts import RunCollectionMonitorScript
from api.odilo import OdiloCirculationMonitor

RunCollectionMonitorScript(OdiloCirculationMonitor).run()
