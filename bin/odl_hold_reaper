#!/usr/bin/env python3
"""Check for ODL holds that have expired and delete them."""

import os
import sys
from newrelic import agent


def odl_hold_reaper():
    bin_dir = os.path.split(__file__)[0]
    package_dir = os.path.join(bin_dir, "..")
    sys.path.append(os.path.abspath(package_dir))

    from core.scripts import RunCollectionMonitorScript     # noqa: E402
    from api.odl import ODLHoldReaper                       # noqa: E402

    RunCollectionMonitorScript(ODLHoldReaper).run()


if __name__ == '__main__':
    nrApp = agent.register_application()

    with agent.BackgroundTask(nrApp, name='odl_hold_reaper', group='Scripts'):
        odl_hold_reaper()
